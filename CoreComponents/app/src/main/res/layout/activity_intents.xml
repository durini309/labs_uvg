<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntentsActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_intentActivity_sendEmail"
        android:text="Enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_mail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_intentActivity_call"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_intentActivity_call"
        android:text="Llamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_intentActivity_sendEmail"
        app:layout_constraintBottom_toTopOf="@id/button_intentActivity_share"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_intentActivity_share"
        android:text="Compartir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_intentActivity_call"
        app:layout_constraintBottom_toTopOf="@id/button_intentActivity_navigate"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_intentActivity_navigate"
        android:text="Navegar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_navigate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_intentActivity_share"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>